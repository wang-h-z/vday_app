{
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "routes": [
      {
        "src": "/assets/(.*)",
        "dest": "/assets/$1",
        "headers": {
          "cache-control": "public, max-age=31536000, immutable"
        }
      },
      {
        "src": "/(.*\\.(ico|png|jpg|jpeg|gif|svg|webp)$)",
        "dest": "/public/$1",
        "headers": {
          "cache-control": "public, max-age=31536000, immutable"
        }
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/.*",
        "dest": "/index.html",
        "status": 200
      }
    ],
    "rewrites": [
      { 
        "source": "/(.*)", 
        "destination": "/index.html" 
      }
    ]
  }